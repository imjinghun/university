<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jing.mynotes.MainActivity"
    android:background="@android:color/holo_green_light">

    <Button
        android:text="书籍分类管理"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/btnBT_Main"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnBT_Main_Click"
        android:background="@color/colorAccent"
        android:textColor="?attr/actionMenuTextColor"/>

    <Button
        android:text="我的读书笔记"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/btnMyNotes_Main"
        android:textSize="24sp"
        android:layout_below="@+id/btnBook_Main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:onClick="btnMyNotes_Main_Click"/>

    <Button
        android:text="书籍管理"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/btnBook_Main"
        android:textSize="24sp"
        android:layout_below="@+id/btnBT_Main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnBook_Main_Click"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_dark"/>

    <Button
        android:text="用户笔记数量汇总"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMyNotes_Main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/btnAllNotes_Main"
        android:textSize="24sp"
        android:background="@color/colorAccent"
        android:onClick="btnAllNotes_Main_Click"/>

    <Button
        android:text="用户的每本书的笔记数量"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAllNotes_Main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/btnUBNotes_Main"
        android:textSize="24sp"
        android:background="@color/colorAccent"
        android:onClick="btnUBNotes_Main_Click"/>

</RelativeLayout>
