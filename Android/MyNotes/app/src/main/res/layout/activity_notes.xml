<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jing.mynotes.NotesActivity"
    android:background="@color/colorAccent">

    <TextView
        android:text="用户编号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="33dp"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:text="添加笔记"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:text="书籍编号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="24dp"
        android:id="@+id/etUID_Notes"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etUID_Notes"
        android:layout_alignRight="@+id/etUID_Notes"
        android:layout_alignEnd="@+id/etUID_Notes"
        android:layout_marginTop="17dp"
        android:id="@+id/etBID_Notes"/>

    <Button
        android:text="添 加"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd_Notes"
        android:textSize="18sp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btnLookNotes_Notes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnAdd_Notes_Click"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_dark"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLookNotes_Notes"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="查看所有笔记"
        android:onClick="btnLookNotes_Notes_Click"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:text="内容："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/etContent_Notes"
        android:layout_alignBottom="@+id/etContent_Notes"
        android:layout_toLeftOf="@+id/etContent_Notes"
        android:layout_toStartOf="@+id/etContent_Notes"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/etContent_Notes"
        android:layout_below="@+id/etBID_Notes"
        android:layout_alignLeft="@+id/etBID_Notes"
        android:layout_alignStart="@+id/etBID_Notes"/>
</RelativeLayout>
