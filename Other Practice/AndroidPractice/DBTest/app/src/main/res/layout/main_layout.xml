<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mian_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jing.dbtest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/tvMaininfo"/>

    <Button
        android:text="创建数据库"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:onClick="btnMainCreateDB_Click"
        android:id="@+id/btnMainCreateDB"
        android:layout_below="@+id/tvMaininfo"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="插入数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMainCreateDB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:onClick="btnAdd_Click"
        android:id="@+id/btnAdd"/>

    <Button
        android:text="删除数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:layout_marginTop="43dp"
        android:onClick="btnDelete_Click"
        android:id="@+id/btnDelete"/>

    <Button
        android:text="显示数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnDelete"
        android:layout_alignStart="@+id/btnDelete"
        android:layout_marginBottom="52dp"
        android:onClick="btnDisplay_Click"
        android:id="@+id/btnDisplay"/>

</RelativeLayout>
