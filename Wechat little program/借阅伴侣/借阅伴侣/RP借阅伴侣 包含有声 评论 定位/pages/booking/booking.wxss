/*预订页面*/

.view_bottom {
  width: 100%;
  height: 100%;
  background-color: rgba(252, 248, 210, 1);
  display: block;
  position: absolute;
  top: 0;
}

.text_name {
  margin: 20px 5px 5px;
  display: inline-block;
  font-size: 16px;
}

.input_name {
  font-size: 16px;
  padding-left: 5px;
  height: 20px;
  border-bottom: 1px solid black;
}

.text_author {
  margin: 10px 5px 5px;
  display: inline-block;
  font-size: 16px;
}

.input_author {
  font-size: 16px;
  padding-left: 5px;
  height: 20px;
  border-bottom: 1px solid black;
}

.form_view_bottom {
  margin-top: 20px;
}

.btn_reset {
  margin: 10px;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

/*显示页面*/

.view_top {
  display: block;
  position: absolute;
  top: 0;
  width: 100%;
  height: 10%;
  background-color: rgba(252, 248, 210, 1);
}

.scroll-view_bottom {
  display: block;
  height: 90%;
  margin: auto auto 0px;
  text-align: center;
  left: 0px;
  right: 0px;
  top: 0px;
  bottom: 0px;
  position: absolute;
}

.view_booklist {
  width: 100%;
  background-color: rgba(252, 248, 210, 0.5);
  border-bottom: 1px solid #666;
}

.navigator {
  display: flex;
  align-items: flex-start;
  flex-direction: row;
  justify-content: flex-start;
  margin: 5px auto;
  width: 100%;
}

.view_book {
  align-self: stretch;
  display: inline-block;
  justify-content: space-between;
  text-align: left;
  width: 100%;
}

.text_book {
  font-size: 14px;
  color: #515151;
  display: block;
  margin: 20px;
}
