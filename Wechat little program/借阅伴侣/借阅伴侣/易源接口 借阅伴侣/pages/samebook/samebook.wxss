.view_top {
  position: absolute;
  min-height: 18px;
  height: 8%;
  display: block;
  width: 100%;
  flex-direction: row;
  text-align: center;
  margin-top: 0px;
  background-color: rgb(245, 246, 247);
  border-bottom: 1px solid #76ee00;
}

.text_bookclass {
  display: inline-block;
  font-family: "Microsoft YaHei";
  color: #383838;
  font-size: 18px;
  height: 18px;
  margin: auto;
  left: 0px;
  right: 0px;
  top: 0px;
  bottom: 0px;
  position: absolute;
}

.scroll-view_bottom {
  display: block;
  height: 92%;
  margin: auto auto 0px;
  text-align: center;
  left: 0px;
  right: 0px;
  top: 0px;
  bottom: 0px;
  position: absolute;
}

.view_booklist {
  width: 100%;
  background-color: rgb(255, 255, 255);
  border-bottom: 1px solid #666;
}

.navigator {
  display: flex;
  align-items: flex-start;
  flex-direction: row;
  justify-content: flex-start;
  margin: 5px auto;
  width: 100%;
}

.view_cover {
  width: 40%;
  display: inline-block;
  min-height: 100px;
}

.img_cover {
  width: 100px;
  height: 100px;
}

.view_book {
  align-self: stretch;
  display: inline-block;
  justify-content: space-between;
  text-align: left;
  width: 60%;
}

.text_book {
  font-size: 14px;
  color: #515151;
  display: block;
  margin: 20px;
}

.text_summary {
  font-size: 14px;
  color: #a1a1a1;
  display: block;
  margin: 10px;
}

.view_list0bottom {
  display: flex;
  justify-content: space-between;
  padding: 18.75rpx;
  padding-right: 18.75rpx;
}

.view_list0bottom0 {
  display: flex;
  padding-left: 18.75rpx;
}

.view_collect {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-width: 40px;
  margin-right: 15px;
}

.img_collect {
  width: 16px;
  height: 16px;
  margin-right: 10px;
}

.text_collect {
  font-size: 12px;
  color: #8c8c8c;
}
